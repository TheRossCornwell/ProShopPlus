@page "{id?}"
@model ProShopPlus.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}



<!-- NEW SECTION -->


<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <div class="row ">

                <div class="col"></div>
                <div class="col-md-8 text-center mt-3">
                    <h1>Update Order</h1>
                </div>
                <div class="col d-grid p-3 float-end">
                    <a asp-page="/Contacts/Edit" class="btn btn-lg btn-success"><i class="fa fa-user-plus fa-xl"></i></a>
                </div>
            </div>
            <form class="row g-3" method="post">
                <!-- Start Date & Table Keys-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Order.ID" />

                <div class="col-md-6 form-floating">
                    <input asp-for="Order.StartDate" class="form-control" />
                    <label asp-for="Order.StartDate" class="control-label"></label>
                    <span asp-validation-for="Order.StartDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <select asp-for="Order.ContactID" asp-items="ViewBag.ContactID" class="form-control form-control-lg selectpicker mt-1 " data-live-search="true" placeholder="Search name..." data-style="border-secondary" data-width="100%" data-size="10"> </select>

                    <span asp-validation-for="Order.ContactID" class="text-danger"></span>
                </div>

                <!-- Product Info-->
                <div class="col-md-6 form-floating">
                    <div class="row g-0 form-floating">
                        <textarea asp-for="Order.Brand" class="form-control" style="height: 100px"></textarea>
                        <label asp-for="Order.Brand" class="control-label"></label>
                        <span asp-validation-for="Order.Brand" class="text-danger"></span>
                    </div>
                    <div class="row g-0 form-floating mt-3">
                        <input asp-for="Order.OrderCode" class="form-control"/>
                        <label asp-for="Order.OrderCode" class="control-label"></label>
                        <span asp-validation-for="Order.OrderCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 form-floating">
                    <textarea asp-for="Order.Product" class="form-control" style="height: 175px"></textarea>
                    <label asp-for="Order.Product" class="control-label"></label>
                    <span asp-validation-for="Order.Product" class="text-danger"></span>
                </div>

                <!-- Order Date Section -->
                <div class="col-md-4 form-floating">
                    <input asp-for="Order.OrderDate" class="form-control" />
                    <label asp-for="Order.OrderDate" class="control-label"></label>
                    <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-floating">
                    <input asp-for="Order.EstimatedDate" class="form-control" />
                    <label asp-for="Order.EstimatedDate" class="control-label"></label>
                    <span asp-validation-for="Order.EstimatedDate" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-floating">
                    <input asp-for="Order.ArrivedDate" class="form-control" />
                    <label asp-for="Order.ArrivedDate" class="control-label"></label>
                    <span asp-validation-for="Order.ArrivedDate" class="text-danger"></span>
                </div>

                <!-- Payment Section-->
                <div class="col-md-4 form-floating">
                    <input asp-for="Order.Cost" class="form-control" />
                    <label asp-for="Order.Cost" class="control-label"></label>
                    <span asp-validation-for="Order.Cost" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-floating">
                    <select asp-for="Order.Paid" class="form-control">
                        <option selected disabled>Select Option</option>
                        <option>NO</option>
                        <option>DEPOSIT</option>
                        <option>YES</option>
                    </select>
                    <label asp-for="Order.Paid" class="control-label"></label>
                    <span asp-validation-for="Order.Paid" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-floating">
                    <input asp-for="Order.Balance" class="form-control" />
                    <label asp-for="Order.Balance" class="control-label"></label>
                    <span asp-validation-for="Order.Balance" class="text-danger"></span>
                </div>
                <!-- Progress Status -->
                <div class="col-md-12 form-floating">

                    <select asp-for="Order.Progress" class="form-control">
                        <option>[1] New</option>
                        <option>[2] Ordered</option>
                        <option>[3] Arrived</option>
                        <option>[4] Contacted</option>
                        <option>[5] Collected</option>
                        <option>[6] Problem</option>
                    </select>
                    <label asp-for="Order.Progress" class="control-label"></label>
                    <span asp-validation-for="Order.Progress" class="text-danger"></span>
                </div>

                <div class="col-md-6 d-grid gap-2">
                    <button type="submit" class="btn btn-lg btn-primary">Update</button>
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-secondary" href="##" onClick="history.go(-1); return false;">Cancel</a>
                </div>


            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
































































@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
