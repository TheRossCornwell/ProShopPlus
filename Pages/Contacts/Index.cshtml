@page
@model ProShopPlus.Pages.Contacts.Contacts.IndexModel

@{
    ViewData["Title"] = "Contact Index";
}


<div class="container">
    <div class="row">
        <div class="col-3">
            <h1 class="display-3">Contacts</h1>
        </div>
        <form class="col-7 p-3 float-end">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" asp-for="SearchString" placeholder="Search Name" aria-label="Search Name" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
            </div>
        </form>

        <div class="d-grid gap-2 col-2 p-2 px-1">
            
                <a asp-page="./Edit" class="btn btn-lg btn-success">Create Contact</a>
            
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Additional Number</th>
            <th>Notes</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ContactList)
        {
            <tr >
                <td><a class="d-flex text-decoration-none text-black" asp-page="./Details" asp-route-id="@item.ID">@item.Name</a></td>
                <td><a class="d-flex text-decoration-none text-black" asp-page="./Details" asp-route-id="@item.ID">@item.PhoneNumber</a></td>
                <td><a class="d-flex text-decoration-none text-black" asp-page="./Details" asp-route-id="@item.ID">@item.AltPhoneNumber &nbsp;</a></td>
                <td colspan="2"><a class="d-flex text-decoration-none text-black" asp-page="./Details" asp-route-id="@item.ID">@item.Notes &nbsp;</a></td>
            </tr>
        }
    </tbody>
</table>