<div class="position-relative g-0">
<table class="table table-hover accordion table-borderless">
    <thead class="bg-white sticky-top top-0">
        <tr class="">
                <th>
                    <h2>Contacts</h2>
                </th>
                <th colspan="3">
                    <form class="input-group input-group-lg">
                        
                            <input type="text" class="form-control" asp-for="SearchString" placeholder="Search Name" aria-label="Search Name" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fa fa-search"></i></button>
                        
                    </form>
                </th>
                <th colspan="2">
                    
                    <div class="d-grid input-group input-group-lg  ">
                    
                        <a asp-page="./Edit" class="btn btn-success ">Create&nbsp;Contact</a>
                    </div>
                </th>
                
        </tr>
            <tr class="border-bottom border-dark">
            <th class="w-20">Name</th>
            <th class="w-15"></th>
            <th class="w-30">Phone&nbsp;#</th>
            <th class="w-20">Additional&nbsp;#</th>
            <th class="w-10"></th>
            <th class="w-5 text-center"><i class="fa fa-sticky-note"></i></th>
        </tr>
    </thead>
    <tbody>
        @{string rowNum = "a";}
        @foreach(var item in Model.ContactList)
        {
             rowNum += "1";
             <tr class="border-bottom">
                <td colspan="2"><a class="d-flex text-decoration-none text-black text-nowrap" asp-page="./Details" asp-route-id="@item.ID">@item.Name</a></td>
                <td><a class="d-flex text-decoration-none text-black text-nowrap" asp-page="./Details" asp-route-id="@item.ID">@item.PhoneNumber</a></td>
                <td colspan="2"><a class="d-flex text-decoration-none text-black text-nowrap" asp-page="./Details" asp-route-id="@item.ID">@item.AltPhoneNumber &nbsp;</a></td>
                <td class="text-center" data-bs-toggle="collapse" data-bs-target="#@rowNum"><i class="fa fa-chevron-down"></i></td>
            </tr>
            <tr class="collapse accordion-collapse" id="@rowNum" data-bs-parent=".table">
                <td colspan="6" class="bg-light"><strong>Notes: </strong> @item.Notes</td>
            </tr>
        }
    </tbody>
</table>
</div>
