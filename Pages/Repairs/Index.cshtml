<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].TargetDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].Progress)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Repair)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>